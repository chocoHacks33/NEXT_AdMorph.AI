# AdMorph.AI Backend Environment Configuration

# Server Configuration
ADMORPH_ENVIRONMENT=development
ADMORPH_HOST=0.0.0.0
ADMORPH_PORT=8000
ADMORPH_LOG_LEVEL=INFO

# CORS Settings (comma-separated)
ADMORPH_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
ADMORPH_OPENAI_MODEL=gpt-4
ADMORPH_OPENAI_MAX_TOKENS=2000
ADMORPH_OPENAI_TEMPERATURE=0.7
ADMORPH_OPENAI_TIMEOUT=30

# Meta/Facebook API Configuration (OPTIONAL - for campaign publishing)
META_ACCESS_TOKEN=your_meta_access_token_here
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
META_AD_ACCOUNT_ID=your_meta_ad_account_id_here

# Database Configuration (OPTIONAL - uses in-memory storage if not set)
DATABASE_URL=postgresql+asyncpg://admorph:admorph_password@localhost:5432/admorph
REDIS_URL=redis://localhost:6379/0

# File Upload Settings
ADMORPH_UPLOAD_DIR=uploads
ADMORPH_MAX_FILE_SIZE=10485760
ADMORPH_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
ADMORPH_RATE_LIMIT_REQUESTS=100
ADMORPH_RATE_LIMIT_WINDOW=60

# Background Jobs
ADMORPH_JOB_TIMEOUT=300
ADMORPH_MAX_CONCURRENT_JOBS=10

# Monitoring
ADMORPH_ENABLE_METRICS=true
ADMORPH_METRICS_PORT=9090
ADMORPH_LOG_FORMAT=json

# Security (for production)
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
