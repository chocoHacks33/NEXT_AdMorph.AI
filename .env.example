# =============================================================================
# ü§ñ AdMorph.AI Full Integration Environment Configuration
# =============================================================================
# This file contains all environment variables needed for the complete
# AdMorph.AI platform with all integrated features from all branches.
# Copy this to .env.local and fill in your actual values.
# =============================================================================

# -----------------------------------------------------------------------------
# üåê FRONTEND CONFIGURATION (Next.js)
# -----------------------------------------------------------------------------

# API Endpoints
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Environment
NEXT_PUBLIC_NODE_ENV=development

# Feature Flags
NEXT_PUBLIC_VOICE_ENABLED=true
NEXT_PUBLIC_CHAT_ENABLED=true
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ECOMMERCE_ENABLED=true
NEXT_PUBLIC_AB_TESTING_ENABLED=true

# AWS Configuration (Optional - for production deployment)
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_S3_BUCKET_NAME=your-bucket-name

# -----------------------------------------------------------------------------
# ü§ñ BACKEND CONFIGURATION (FastAPI + Agentic System)
# -----------------------------------------------------------------------------

# Server Configuration
ADMORPH_ENVIRONMENT=development
ADMORPH_HOST=0.0.0.0
ADMORPH_PORT=8000
ADMORPH_LOG_LEVEL=INFO
ADMORPH_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# üß† AI SERVICES CONFIGURATION
# -----------------------------------------------------------------------------

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Voice Services (Optional)
VOICE_ENABLED=true
VOICE_PROVIDER=openai

# -----------------------------------------------------------------------------
# üì± META API INTEGRATION (Optional - for real ad campaigns)
# -----------------------------------------------------------------------------

# Meta Business API
META_ACCESS_TOKEN=your_meta_access_token
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_AD_ACCOUNT_ID=your_ad_account_id
META_BUSINESS_ID=your_business_id

# Meta API Settings
META_API_VERSION=v18.0
META_RATE_LIMIT_ENABLED=true

# -----------------------------------------------------------------------------
# üõçÔ∏è E-COMMERCE PLATFORM INTEGRATIONS
# -----------------------------------------------------------------------------

# Shopify Integration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2023-10

# Amazon Integration
AMAZON_ACCESS_KEY_ID=your_amazon_access_key
AMAZON_SECRET_ACCESS_KEY=your_amazon_secret_key
AMAZON_MARKETPLACE_ID=your_marketplace_id

# WooCommerce Integration
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret

# -----------------------------------------------------------------------------
# üíæ DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# PostgreSQL (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=admorph
POSTGRES_USER=admorph
POSTGRES_PASSWORD=admorph_password

# Database URL (Alternative format)
DATABASE_URL=postgresql://admorph:admorph_password@localhost:5432/admorph

# Redis (Caching & Job Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis URL (Alternative format)
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# üîß JOB PROCESSING & BACKGROUND TASKS
# -----------------------------------------------------------------------------

# Job Queue Configuration
ADMORPH_JOB_TIMEOUT=300
ADMORPH_MAX_RETRIES=3
ADMORPH_RETRY_DELAY=60

# Background Processing
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# üìä ANALYTICS & MONITORING
# -----------------------------------------------------------------------------

# Performance Tracking
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/admorph.log

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# üîí SECURITY CONFIGURATION
# -----------------------------------------------------------------------------

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# -----------------------------------------------------------------------------
# üß™ A/B TESTING & EXPERIMENTATION
# -----------------------------------------------------------------------------

# A/B Testing Configuration
AB_TESTING_ENABLED=true
AB_TEST_MIN_SAMPLE_SIZE=100
AB_TEST_CONFIDENCE_LEVEL=0.95
AB_TEST_MAX_DURATION_DAYS=30

# Experimentation Platform
EXPERIMENT_TRACKING_ENABLED=true
EXPERIMENT_PROVIDER=internal

# -----------------------------------------------------------------------------
# üöÄ DEPLOYMENT & SCALING
# -----------------------------------------------------------------------------

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Auto-scaling (for production)
AUTO_SCALING_ENABLED=false
MIN_REPLICAS=1
MAX_REPLICAS=10

# -----------------------------------------------------------------------------
# üîç DEVELOPMENT & DEBUGGING
# -----------------------------------------------------------------------------

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false
API_DOCS_ENABLED=true

# Development Tools
HOT_RELOAD_ENABLED=true
SOURCE_MAPS_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://admorph:admorph_password@localhost:5432/admorph_test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# üìù SETUP INSTRUCTIONS
# =============================================================================
#
# 1. Copy this file to .env.local:
#    cp .env.example .env.local
#
# 2. Fill in your actual API keys and credentials
#
# 3. Required for basic functionality:
#    - OPENAI_API_KEY (for AI features)
#    - Database credentials (PostgreSQL + Redis)
#
# 4. Optional for enhanced features:
#    - META_* variables (for real ad campaigns)
#    - E-commerce platform credentials
#    - AWS credentials (for production deployment)
#
# 5. Start the full stack:
#    docker-compose -f docker-compose.integration.yml up --build
#
# =============================================================================